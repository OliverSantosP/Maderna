<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Maderna</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <link rel="stylesheet" href="~/Content/css/owl.carousel.css">

    <!-- Default Theme -->
    <link rel="stylesheet" href="~/Content/css/owl.theme.css">

</head>
<body>
    <div id="wrap">
        <div class="navbar navbar-inverse" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#"><img src="~/Content/images/Marco_Top.png" /></a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("HOME", "Index", "Home", null, new { @class = "menulink" })</li>
                        <li><div class="menulinkbar hidden-xs">|</div></li>
                        <li>@Html.ActionLink("ABOUT", "About", "Home", null, new { @class = "menulink" })</li>
                        <li><div class="menulinkbar hidden-xs">|</div></li>
                        <li>@Html.ActionLink("PRODUCTS", "Index", "Products", null, new { @class = "menulink" })</li>
                        <li><div class="menulinkbar hidden-xs">|</div></li>
                        <li>@Html.ActionLink("CONTACTS", "Contact", "Home", null, new { @class = "menulink" })</li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <div class="navbar-header">
                <img src="~/Content/images/Marco_Bottom.png" class="LogoBottom" />
            </div>
        </div>
        <div id="push"></div>
    </div>


    <div id="footer">
        <div class="footer">
            <div class="row-centered grayfooter">
                <div class="col-centered">

                    <div class="col-centered">
                        © Copyright 2014
                    </div>
                    <div class="col-centered"><div class="hidden-xs hidden-sm">•</div></div>
                    <div class="col-centered">
                        MADERNA, S.A.
                    </div>

                    <div class="col-centered">
                        Todos los derechos reservados
                    </div>
                    <div class="col-centered"><div class="hidden-xs hidden-sm">|</div></div>
                    <div class="col-centered">Síguenos en <a href="http://www.google.com"><img src="~/Content/Images/fb_icon.png" /></a><a href="http://www.google.com"><img src="~/Content/Images/tw_icon.png" /></a><a href="http://www.google.com"><img src="~/Content/Images/yt_icon.png" /></a></div>

                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/owl.carousel.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            var owl = $("#products-carousel");

            owl.owlCarousel({
                items: 3,
                center: true,
                autoplayTimeout: 1000,
                autoplayHoverPause: true,
                autoplay: true,
                autoplaySpeed: 4000,
                loop: true,
                mouseDrag: true,
                touchDrag: true,
                autoWidth: true,
                nav: true
            });

            if (location.pathname != "/") {
                $('.menulink a[href^="/' + location.pathname.split("/")[1] + '"]').addClass('menulinkactive');
            } else $('.menulink a:eq(0)').addClass('menulinkactive');
        });

    </script>
    @RenderSection("scripts", required: false)
</body>

</html>
